<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>
<%= form_for(@user, url: signup_path) do |f| %>
  <%= f.label :login %>
  <%= f.text_field :login %>
  <br />

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br />

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br />

  <%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.password_field :password_confirmation %>
  <br />

  <%= f.submit 'Create my account' %>
<% end %>
